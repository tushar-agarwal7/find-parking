<% layout("/layouts/boilerplate") %>


<div class="row mt-5 ">
    <div class="col-8 offset-2">
<h3>Edit Your Place</h3>
<form  method="post" action="/home/<%= blog._id  %>?_method=put"  class="needs-validation" novalidate enctype="multipart/form-data" >

    <div class="mb-3 mt-3">
        <label for="title" class="form-label">Title</label>
        <input type="text"  name="blog[title]" value="<%= blog.title  %>" class="form-control"
            required>
        <div class="valid-feedback">
            Title Looks good!
        </div>
        <div class="mb-3 mt-3">
            <label for="description" class="form-label">Description</label>
            <textarea type="description"  name="blog[description]" class="form-control"
                required><%= blog.description  %></textarea>
            <div class="invalid-feedback">
                Please Enter a short description
            </div>
            <label for="location" class="form-label">Location</label>
        <input type="text"  name="blog[location]" value="<%= blog.location  %>" class="form-control"
            required>
            <div class="mb-3 mt-3">
                <label for="image" class="form-label">Upload Image</label>
                <input type="file"  name="blog[image]" class="form-control" >
             
                <button class="btn btn-primary mt-4">Edit</button>
</form>

</div>
</div>