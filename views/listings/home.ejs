<% layout("/layouts/boilerplate") %>

<style>
  .carousel-item img {
    border-radius: 34px; /* Rounded corners */
    height: 700px; /* Adjust the height as needed */
    object-fit: cover; /* Ensure the image covers the entire area */
  }
  
  .carousel-caption {
    background-color: rgba(0, 0, 0, 0.7); /* Semi-transparent black background */
    border-radius: 10px; /* Rounded corners */
    padding: 20px; /* Padding around the caption content */
    color: white; /* Text color */
    animation: fadeInUp 1s ease forwards; /* Animation for caption */
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(50px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .blog-card {
    transition: all 0.3s ease; /* Smooth transition */
  }

  .blog-card:hover {
    transform: translateY(-5px); /* Move card up slightly on hover */
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Add shadow on hover */
  }
</style>

<div class="container mt-5 mb-5">
  <div id="carouselExampleAutoplaying" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
      <div class="carousel-item active">
        <img src="https://images.unsplash.com/photo-1495435229349-e86db7bfa013?w=1000&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8MTV8fGNhciUyMHBhcmtpbmd8ZW58MHx8MHx8fDA%3D" class="d-block w-100" alt="...">
        <div class="carousel-caption">
          <h5>Simplify Your Parking Experience: Hassle-Free Solutions Await</h5>
        </div>
      </div>
      <div class="carousel-item">
        <img src="https://images.unsplash.com/photo-1610494099038-4e5d8d696807?w=1000&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8NDN8fGNhciUyMHBhcmtpbmd8ZW58MHx8MHx8fDA%3D" class="d-block w-100" alt="...">
        <div class="carousel-caption">
       </div>
      </div>
      <div class="carousel-item">
        <img src="https://images.unsplash.com/photo-1653844535972-0b25f4bd8ae4?w=500&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1yZWxhdGVkfDJ8fHxlbnwwfHx8fHx8" class="d-block w-100" alt="...">
        <div class="carousel-caption">
          <h5>Prime Parking Spots</h5>
        </div>
      </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleAutoplaying" data-bs-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleAutoplaying" data-bs-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Next</span>
    </button>
  </div>
</div>

<div class="container mt-5">
  <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 flex flex-col">
    <% for(let blog of allBlogs){ %>
    <a href="/home/<%= blog._id  %>" class="blog-link">
      <div class="col">
        <div class="card blog-card">
          <img src="<%= blog.image.url  %>" class="card-img-top" style="height: 20rem; border-radius: 10px;" alt="blogimage">
          <div class="card-body">
            <h5 class="card-title"> <b> <%= blog.title  %> </b></h5>
            <p class="card-text"> Owned by: <i> <%= blog.owner.username %> (Contact <%= blog.contact  %>) </i></p>
            <p class="card-text"><%= blog.location  %></p>
          </div>
        </div>
      </div>
    </a>
    <% } %>
  </div>
</div>
